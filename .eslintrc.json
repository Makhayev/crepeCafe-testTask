{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "prettier", "plugin:react/recommended", "plugin:prettier/recommended", "plugin:tailwindcss/recommended", "next", "plugin:compat/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier",
    "tailwindcss",
    "import",
    "typescript-sort-keys"
  ],
  "ignorePatterns": ["**.d.ts"]
}
